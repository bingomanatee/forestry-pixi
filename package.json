{
  "name": "forestry-pixi",
  "version": "1.0.0",
  "description": "Yarn Berry monorepo with grid, panel, drag packages and demo app",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "yarn workspaces foreach -A run build",
    "clean": "yarn workspaces foreach -A run clean",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@storybook/html-vite": "^10.1.11",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "^4.0.17",
    "happy-dom": "^20.3.9",
    "jsdom": "^27.4.0",
    "pixi.js": "^8.15.0",
    "storybook": "^10.1.11",
    "typescript": "^5.5.3",
    "vitest": "^4.0.17"
  },
  "packageManager": "yarn@4.0.2"
}
